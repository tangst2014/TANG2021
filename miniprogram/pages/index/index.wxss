.customerBody{
    margin: 0 12rpx;
}
.customerBody .baby{
    margin: 20rpx 20rpx 50rpx 20rpx;
    word-break: break-all;
}

.customerBody .baby .babyShow{
    margin: 10px;
    display: flex;
    justify-content: center;
    flex-direction: column;
    text-align: center;
}

.customerBody .baby .babyShow .babyName{
    
    margin: 0 20rpx;
    padding: 10rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.customerBody .baby .babyShow .babyName .edit{
    border: 1rpx red solid;
    width: 234rpx;
    border-radius: 20rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}

.babyBody{
    padding-top: 10px;
    position: fixed;
    bottom: 0rpx;
    background-color: white;
    z-index: 1000;
    width: 100%;
    height: 73%;
}
.babyBody .babyInfo{
    margin-bottom: 20px;
}
