}

.swiper-item .baby-title{
    text-align: center;
}
.swiper-item .picker{
    display: flex;
    justify-content: center;
    align-items: center;
    padding:10px 0;
    width: 50px;
    height: 40rpx;
    border-bottom: 1px solid #d0d0d0;
}
.swiper-item .baby{
    position: relative;
    display: flex;
    flex-direction: row;
    margin: 20px 0;
    align-items: center;
}
.showBabyName{
    margin: 10px 20px;
    color: red;
    font-size:40rpx;
    font-weight: bold;
}
.swiper-item .addBaby{
    display: flex;
    align-items: center;
    justify-content: center;
}
.swiper-item .baby .baby-xingxing{
    height: 100%;
}
.welcome{
